{
  "name": "ignite-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npx tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 delete ignite-backend || true",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:data-migrate": "sh -c 'if [ -f dist/prisma/data-migrations/index.js ]; then node dist/prisma/data-migrations/index.js; else npx tsx prisma/data-migrations/index.ts; fi'",
    "typecheck": "tsc --noEmit",
    "predev": "sh -c 'if [ -f dist/scripts/ensure-db.js ]; then node dist/scripts/ensure-db.js; else npx tsx scripts/ensure-db.ts; fi' && prisma generate && prisma migrate deploy && npm run db:data-migrate",
    "prestart": "sh -c 'if [ -f dist/scripts/ensure-db.js ]; then node dist/scripts/ensure-db.js; else npx tsx scripts/ensure-db.ts; fi' && prisma generate && prisma migrate deploy && npm run db:data-migrate"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "prisma": "^6.17.1",
    "tsx": "^4.19.2",
    "pm2": "^5.4.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-mysql-session": "^3.0.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.11.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "pino-pretty": "^11.2.2",
    "typescript": "^5.6.3"
  }
}